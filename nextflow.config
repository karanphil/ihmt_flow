params {
    input=false
    help=false
    ihmt_num_threads=4
    bet_T1w=0.16
    single_echo=false
    filtering=false
}

process {
    publishDir = {"./results/$sid"}
    scratch = true
    stageInMode = 'copy'
    stageOutMode = 'rsync'
    tag = { "$sid" }
    afterScript = 'sleep 1'
}

singularity.autoMounts = true
